@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    @Styles.Render("~/Content/Style.css")
</head>
<body>
    <div class="row justify-content-center mt-5">
        <div class="m-5">
            <div class="card">
                <div  class="card-header"><h3 class="text-center">Login</h3></div>
                <div class="card-body text-center">
                    <form @Url.Action("Login", "Login") method="post">
                        <div class="mb-3">
                            <label class="form-label">Correo</label>
                            <input type="email" class="form-control form-input" value="@TempData["Email"]" name="email" required />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Contraseña</label>
                            <input type="password" class="form-control form-input" name="pass" required />
                        </div>
                        <div class="mb-3">
                            <div style="text-align:center">

                                <div class="d-grid">
                                    <button class="btn btn-primary" type="submit">Ingresar</button>
                                </div>
                                <div style="margin-bottom:10px;margin-top:10px">
                                    <a class="btn btn-link" href="@Url.Action("Create","Usuario")">Cree una cuenta</a>
                                </div>
                                <div style="margin-bottom:10px">
                                    <a class="btn btn-link" href="@Url.Action("RestablecerPass","Login")">¿Olvidó su contraseña?</a>
                                </div>
                            </div>
                        </div>

                        @if (TempData["Mensaje"] != null)
                        {
                            <div style="text-align:center;color:red" class="alert alert-danger" role="alert">
                                @TempData["Mensaje"]
                            </div>
                        }
                    </form>
                </div>
            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>